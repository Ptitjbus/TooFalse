{% extends 'base.html.twig' %}

{% block title %}Administration des catégories{% endblock %}

{% block body %}
    <h1>Administration des catégories</h1>

    <a href="{{ path('app_category_new') }}" class="btn btn-primary mb-4">Créer une nouvelle catégorie</a>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">Éditer</a>

                    <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" style="display: inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}