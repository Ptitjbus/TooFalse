{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="px-5 lg:px-40 my-5">
        <h1 class="text-3xl font-bold">Liste des catégories</h1>
    </div>

    <div class="grid gap-4 px-5 lg:px-40">
        {% for category in categories %}
            <div class="p-4 border rounded flex justify-between items-center">
                <h2>{{ category.name }}</h2>
                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="w-fit items-center rounded-md px-4 py-2 font-medium text-black ring-1 ring-inset ring-gray-300">Voir</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}